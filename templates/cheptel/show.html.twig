{% extends 'base.html.twig' %}

{% block title %}Cheptel{% endblock %}

{% block body %}
    <h1>Cheptel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cheptel.id }}</td>
            </tr>
            <tr>
                <th>NomCheptel</th>
                <td>{{ cheptel.nomCheptel }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ cheptel.dateCreation ? cheptel.dateCreation|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ cheptel.commentaire }}</td>
            </tr>
            <tr>
                <th>Traitement</th>
                <td>
                    {% for chevres in cheptel.chevres %}
                        {% for groupeTraitements in chevres.groupetraitements %}
                            {{ groupeTraitements.Traitement }}
                            {% endfor %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cheptel_index') }}">back to list</a>

    <a href="{{ path('app_cheptel_edit', {'id': cheptel.id}) }}">edit</a>

    {{ include('cheptel/_delete_form.html.twig') }}
{% endblock %}
